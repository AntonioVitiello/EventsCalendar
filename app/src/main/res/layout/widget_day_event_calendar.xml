<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/day_event_calendar_size"
    android:minHeight="@dimen/day_event_calendar_size"
    tools:background="@color/black_opaque">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circleImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- tools:src="@drawable/shape_light_red_circle" /> -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingBottom="5dp"
        tools:style="@style/white_bold_14"
        tools:text="12"
        tools:textColor="@color/white" />

</FrameLayout>