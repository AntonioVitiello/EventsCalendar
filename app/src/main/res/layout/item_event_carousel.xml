<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_border_6"
    android:paddingHorizontal="9dp"
    android:paddingBottom="28dp"
    tools:showIn="@layout/widget_event_carousel">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateText"
        style="@style/gray_medium_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="19 Giugno 2022" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionText"
        style="@style/white_medium_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lineSpacingExtra="6dp"
        android:lines="3"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        tools:text="Non dimenticate che a partire dal 19 Giugno 2022, sarà disponibile la precompilata di quest’anno, da modificare ed accettare entro il 30 settembre 2022." />

</androidx.constraintlayout.widget.ConstraintLayout>